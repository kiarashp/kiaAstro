---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import HeroHome from "../sections/home/HeroHome.astro";
import SkillHome from "../sections/home/SkillHome.astro";
import FeatureHome from "../sections/home/FeatureHome.astro";
import CTAHome from "../sections/home/CTAHome.astro";
import { getCollection } from "astro:content";

const projectPosts = await getCollection("projects");
---

<Layout
  title="Kiarash | Astro.js Portfolio "
  description="Explore the portfolio of Kiarash , a frontend developer. Built with Astro.js, Tailwind CSS, and DaisyUI, this fast, responsive, and SEO-friendly website showcases projects, skills, and modern web development expertise."
>
  <HeroHome />
  <SkillHome />
  <FeatureHome projects={projectPosts} />
  <CTAHome />
</Layout>
