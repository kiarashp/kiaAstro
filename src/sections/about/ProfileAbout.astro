---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import kia from "../../images/about/kia.jpg";
---

<!-- Profile Card -->
<div class="md:col-span-1">
  <div class="card bg-base-100 shadow-xl sticky top-8">
    <figure class="px-8 pt-8">
      <div class="avatar">
        <div
          class="relative w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
        >
          <Image
            src={kia}
            alt="kiarash"
            width={600}
            height={400}
            class="w-full h-full object-cover rounded-xl"
            loading="eager"
            decoding="async"
          />
          <div class="absolute inset-0 bg-base-300/10"></div>
        </div>
      </div>
    </figure>
    <div class="card-body text-center py-6">
      <h2 class="card-title justify-center text-2xl">KIARASH</h2>
      <p class="text-sm text-base-content/70">Web Developer</p>

      <div class="flex justify-center gap-3 mt-4">
        <a
          href="https://github.com/kiarashp"
          class="btn btn-circle btn-sm btn-ghost"
        >
          <Icon name="lucide:github" class="h-5 w-5" />
        </a>
        <a
          href="https://www.linkedin.com/in/kiarash-p-48b643175/"
          class="btn btn-circle btn-sm btn-ghost"
        >
          <Icon name="lucide:linkedin" class="h-5 w-5" />
        </a>
        <a
          href="mailto:info@kiapmd.com"
          class="btn btn-circle btn-sm btn-ghost"
        >
          <Icon name="lucide:mail" class="h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</div>
