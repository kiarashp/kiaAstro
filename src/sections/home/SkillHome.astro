---
import { Icon } from "astro-icon/components";

const skills = [
  {
    category: "Frontend",
    icon: "lucide:code",
    items: ["Svelte", "SvelteKit", "React", "Next.js", "Astro", "HTML", "CSS", "Tailwind CSS", "DaisyUI", "ShadCN UI"]
  },
  {
    category: "Backend & APIs",
    icon: "lucide:server",
    items: ["Strapi", "WordPress", "Supabase", "Firebase", "Prisma", "Node.js", "REST APIs"]
  },
  {
    category: "Database",
    icon: "lucide:database",
    items: ["PostgreSQL", "Sanity CMS"]
  },
  {
    category: "E-commerce & Payments",
    icon: "lucide:shopping-cart",
    items: ["WooCommerce", "Stripe"]
  }
];
---

<section class="py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-4xl font-bold text-center mb-12">Skills & Technologies</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {skills.map(skill => (
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body items-center text-center">
            <Icon name={skill.icon} class="h-12 w-12 text-primary mb-2" />
            <h3 class="card-title text-lg">{skill.category}</h3>
            <p class="text-sm">{skill.items.join(", ")}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
